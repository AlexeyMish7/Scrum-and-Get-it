{
  "compilerOptions": {
    "target": "ES2023",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2023"],
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "types": ["node"],
    "typeRoots": ["./node_modules/@types"],
    "verbatimModuleSyntax": false,
    "rootDir": ".",
    "outDir": "dist",
    "sourceMap": true
  },
  "include": ["src/**/*.ts", "prompts/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
