# Copy this file to server/.env and fill in your values.
# DO NOT commit real secrets. Keep server/.env out of version control.

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
# Port the server listens on
# Default: 8787 (must match VITE_AI_BASE_URL in frontend/.env)
# Change if port 8787 is already in use
PORT=8787

# CORS configuration
# Allow requests from frontend origin
# Local development: http://localhost:5173 (Vite default port)
# Production: https://your-frontend-domain.com
CORS_ORIGIN=http://localhost:5173

# =============================================================================
# AI PROVIDER CONFIGURATION
# =============================================================================
AI_PROVIDER=openai                     # (usually 'openai')
AI_API_KEY=YOUR_OPENAI_API_KEY         # <--- UNIQUE per developer (your personal key) or use team key in CI
AI_MODEL=gpt-4o-mini                   # Optional default model (can be the same for team)
AI_MAX_TOKENS=1500                     # Max tokens for AI responses (1500 = ~600-750 words, needed for cover letters)
FAKE_AI=false                          # Local dev choice: true to use mock responses and avoid API calls

# =============================================================================
# AUTHENTICATION CONFIGURATION
# =============================================================================
# Dev auth (local development only)
ALLOW_DEV_AUTH=true                    # true when running locally; false in production

# =============================================================================
# DATABASE CONFIGURATION (Supabase)
# =============================================================================
SUPABASE_URL=https://your-supabase-url.supabase.co   # Usually shared if using a central dev project
SUPABASE_SERVICE_ROLE_KEY=YOUR_SUPABASE_SERVICE_ROLE_KEY  # SECRET: usually team-shared for a dev instance OR unique per developer

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=info                         # e.g., debug | info | warn | error

# =============================================================================
# NOTES
# =============================================================================
# - AI_API_KEY and SUPABASE_SERVICE_ROLE_KEY are sensitive and must never be exposed to frontend code.
# - For CI / deployment, set these values in your deployment environment (GitHub Actions secrets, Vercel, etc.).
# - Prefer personal OpenAI keys for local testing if your org policy allows. If not, coordinate a shared dev key.
# - PORT must match the port in frontend VITE_AI_BASE_URL (default: 8787)
