# ============================================================================
# SERVER â€” PRODUCTION ENVIRONMENT
# ============================================================================
# Copy to: server/.env.production.local (recommended) OR server/.env.production
# NOTE: In real production deployments (Render/Railway/Fly), set these as platform
# environment variables instead of relying on files.
# ============================================================================

# Environment
NODE_ENV=production
APP_ENV=production

# Server
PORT=8787
CORS_ORIGIN=https://your-prod-frontend.example.com
LOG_LEVEL=error

# Supabase (PRODUCTION project)
SUPABASE_URL=https://your-prod-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-prod-service-role-key-here

# Auth + AI feature flags
ALLOW_DEV_AUTH=false
FAKE_AI=false
FEATURE_AI_ROUTES=true

# AI Provider
AI_PROVIDER=openai
AI_API_KEY=sk-your-openai-api-key-here
AI_MODEL=gpt-4o-mini
AI_MAX_TOKENS=1500
