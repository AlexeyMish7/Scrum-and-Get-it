# ============================================================================
# SERVER â€” STAGING ENVIRONMENT
# ============================================================================
# Copy to: server/.env.staging.local (recommended) OR server/.env.staging
# Run with: npm run dev:staging
# ============================================================================

# Environment
NODE_ENV=production
APP_ENV=staging

# Server
PORT=8787
CORS_ORIGIN=https://your-staging-frontend.example.com
LOG_LEVEL=info

# Supabase (STAGING project)
SUPABASE_URL=https://your-staging-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-staging-service-role-key-here

# Auth + AI feature flags
ALLOW_DEV_AUTH=false
FAKE_AI=false
FEATURE_AI_ROUTES=true

# AI Provider
AI_PROVIDER=openai
AI_API_KEY=sk-your-openai-api-key-here
AI_MODEL=gpt-4o-mini
AI_MAX_TOKENS=1500
