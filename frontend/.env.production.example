# Supabase (PRODUCTION project)
VITE_SUPABASE_URL=https://YOUR_PROD_PROJECT.supabase.co
VITE_SUPABASE_ANON_KEY=your-prod-anon-key-here

# Backend server (production deployment)
VITE_API_BASE_URL=https://your-prod-api.example.com

# Backend AI server (back-compat)
VITE_AI_BASE_URL=https://your-prod-api.example.com

# Optional compatibility for legacy usage in Job Import
VITE_API_URL=https://your-prod-api.example.com

# Feature flag / dev tooling
VITE_DEV_MODE=false

# Sentry (optional)
VITE_SENTRY_DSN=
VITE_SENTRY_TRACES_SAMPLE_RATE=0

# Cache tuning (optional)
VITE_CACHE_STALE_TIME_MINUTES=5
VITE_CACHE_GC_TIME_MINUTES=30
